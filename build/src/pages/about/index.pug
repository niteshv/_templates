extends ../../pages-template/layout.pug

block headTitle
	title #{data.about.pageTitle}
	meta(name='description' content=`${data.about.metaDescription}`)
	meta(property='og:title' content=`${data.about.openGraphTitle}`)
	meta(property='og:description' content=`${data.about.openGraphDescription}`)
	meta(property='og:image' content=`${data.about.openGraphImage}`)

block body
	h1= data.about.pageTitle
	.col !{data.about.pageContent}
	include ../../components/carousel/carousel
	+carousel('about')