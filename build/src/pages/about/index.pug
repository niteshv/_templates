extends ../../pages-template/layout.pug

block headTitle
	title #{about.pageTitle}
	meta(name='description' content=`${about.metaDescription}`)
	meta(property='og:title' content=`${about.openGraphTitle}`)
	meta(property='og:description' content=`${about.openGraphDescription}`)
	meta(property='og:image' content=`${about.openGraphImage}`)

block body
	h1= about.pageTitle
	.col !{about.pageContent}
	include ../../components/carousel/carousel
